<%- include('partials/header.ejs') %>

<h1>Home</h1>
<p>
  <%= msg %>

</p>
<p>
  <strong>Contribute to our blog!</strong> <a href="/compose">Click here</a>
</p>
<% for(i = (posts.length - 1); i >= 0; i--) { %>
<h2><a href="/post/<%= posts[i].id %>"><%= posts[i].title %></a></h2>
<p>
  <%= _.truncate(posts[i].post, { 'length': 100, 'separator': ' '}); %>
  (<a href="/post/<%= posts[i].id %>">read more</a>)
</p>
<p> <i>~By <%=posts[i].name%> </i></p>
<p><i><small><%= posts[i].date %></small></i></p>
<% } %>
<%- include('partials/footer.ejs') %>
